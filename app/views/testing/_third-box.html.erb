<%$b=0%>
<%params['purpose'].each do |a,b|%>
<%$b+=1%>
 <div class="testing-third-middle-box">
    <div class="testing-third-middle-box-top">
       
        <h1>목표 <%=$b%>. <%=b['goal']%></h1>
        <section>
            <span>
                <h2>예상시간</h2>
                <h3><%=b['hour']%>분 <%=b['minute']%>초</h3>
            </span>
            <h4>|<h4>
            <span>
                <h2>예상 리워드</h2>
                <h3>300P</h3>
            </span>
            <h4>|<h4>
            <span>
                <h2>타겟 수</h2>
                <h3><%=b.keys.length-1%></h3>
            </span>
            <h4>|<h4>
            <span>
                <h2>테스터 수</h2>
                <%@testernumber=0%>
                <h3><%b.each do |c,d|%>
                    <%if c != "goal" then%>
                    <%@testernumber+=d['testernumber'].to_i()%>
                    <%end%>
                    <%end%>
                    <%=@testernumber%>
                </h3>
            </span>
            <h4>|<h4>
            <span>
                <h2>인터뷰 질문</h2>
                <h3><%=(b.keys.length-1)*4%></h3>
            </span>
        </section>
    </div>
    <%@target=0%>
    <%b.each do |c,d|%>
        <%if c != "goal"  && c!= 'hour' && c!='minute' then%>
            <div class="testing-third-middle-box-middle">
                <div class="testing-third-middle-box-middle-target">
                    <h1>타겟 <%=@target+=1%></h1>
                </div>
                <div class="testing-third-middle-box-middle-left">
                    <h1><%=d['target']%></h1>
                    <secction class="w-100">
                        <span class="w-100">
                            <h2>인터뷰 질문 1</h2>
                            <h3>[목표 달성 후] <%=d['question1']%></h3>
                        </span>
                        <span class="w-100">
                            <h2>인터뷰 질문 2</h2>
                            <h3>[목표 달성 후] <%=d['question2']%></h3>
                        </span>
                        <span class="w-100">
                            <h2>인터뷰 질문 3</h2>
                            <h3>[목표 실패 후] <%=d['question3']%></h3>
                        </span>
                        <span class="w-100">
                            <h2>인터뷰 질문 4</h2>
                            <h3>[목표 실패 후] <%=d['question4']%></h3>
                        </span>
                    </section>
                </div>
                <div class="testing-third-middle-box-middle-right">
                <section class="d-flex justify-content-between">
                    <span>
                        <h2>성별</h2>
                        <h3><%=d['sex']%></h3>
                    </span>
                    <div></div>
                    <span>
                        <h2>연령대</h2>
                        <h3><%=d['age']%></h3>
                    </span>
                    <div></div>
                    <span>
                        <h2>테스터 수</h2>
                        <h3><%=d['testernumber']%></h3>
                    </span>
                </section>
                </div>
            </div>
        <%end%>
    <%end%>
</div>

<%end%>