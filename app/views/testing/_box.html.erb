    <div class="card">
        <div class="card-header" id="heading<%=$a%>">
            <h5 class="mb-0 d-flex align-items-center h-100">
                <button class="card-button collapsed" type="button" data-toggle="collapse" data-target="#collapse<%=$a%>"  aria-controls="collapse<%=$a%>">
                <div>
                <h1>목표 (<%=$a%>)</h1>
                <h2>목표를 입력해주세요.</h2>
                </div>
                <img>
                </button>
            </h5>
        </div>
        <div id="collapse<%=$a%>" class="collapse<% if $a == 1 then%><%='show'%><%end%>" aria-labelledby="heading<%=$a%>" data-parent="#accordionExample<%=$a%>" aria-expanded="false">
            <div class="card-body">
                <%= render "card1"%>
                <%= render "card2"%>
                <div class="card-submit">
                    <button>+타겟 추가하기</button>
                </div>
            </div>
        </div>
    </div>
</div>

