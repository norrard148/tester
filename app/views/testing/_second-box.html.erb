
<%judge = defined? @purpose_count %>
<%if judge == nil%>
<% then %>
<div class="accordion" id="accordionExample<%=$a+=1%>">
    <div class="card">
        <div class="card-header" id="heading<%=$a%>">
            <section class="mb-0 d-flex align-items-center h-100">
                <button class="card-button collapsed" type="button" data-toggle="collapse" data-target="#collapse<%=$a%>"  aria-controls="collapse<%=$a%>">
                <div>
                <h1>목표 (<%=$a%>)</h1>
                <h2>목표를 입력해주세요.</h2>
                </div>
                <%=image_tag("big-arrow-fold.svg", :class=>"purpose-arrow")%>
                </button>
            </section>
        </div>
        <div id="collapse<%=$a%>" class="collapse show" aria-labelledby="heading<%=$a%>" data-parent="#accordionExample<%=$a%>" aria-expanded="false">
        <%$c["purpose" + $a.to_s() +"cardnumber"] = 0 %>
            <div class="card-body">
                <div class="w-100">
                    <%= render "card1"%>
                    <%= render "card2"%>
                </div>

                <div class="card-submit">
                    <a><h1>+ 타겟 추가하기</h1></a>
                </div>
            </div>
        </div>
    </div>
</div>
<%else%>
<%$a=@purpose_count.to_i()%>
<%if $a !=3%>
