
<section class="card-body-1">
    <div class=" card-body-1-left d-flex flex-column">
        <label>예상 시간*</label>
        <div class="d-flex align-items-center">
            <div class="card-body-1-left-hour">
                <select class="minute<%=$a%> ui dropdown" onchange="minutechange(this)" name="[purpose][purpose<%=$a%>][minute]" form="second-form">
                <%@time=0%>
                <%while @time < 60%>
                    <option value="<%=@time%>"><%=@time%></option>
                    <%@time+=1%>
                <%end%>
                </select>
               
            </div>
            <h1>분</h1>
            <div class="card-body-1-left-minute">
                <select class="second<%=$a%> ui dropdown" onchange="secondchange(this)" name="[purpose][purpose<%=$a%>][second]" form="second-form">
                <%@time=0%>
                <%while @time < 60%>
                    <option value="<%=@time%>"><%=@time%></option>
                    <%=@time+=1%>
                <%end%>
                </select>
            </div>
            <h1>초</h1>
        </div>
    </div>
    <div class="card-body-1-right d-flex flex-column">
        <label>이 목표를 통해 어떤 것을 알고 싶으신가요?</label>
        <input type="text" name="[purpose][purpose<%=$a%>][goal]">
    </div>
</section>
